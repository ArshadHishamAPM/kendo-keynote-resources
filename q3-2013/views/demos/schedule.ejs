<% layout('../layout') -%>

<div class="row">
  <div class="col-xs-12 col-sm-12 sidebar-offcanvas">
    <div class="form-horizontal">
      <div class="form-group">
        <label for="location" class="control-label col-sm-6 header">Select A Location</label>
        <div class="col-sm-6 col-md-6">
          <select name="location" id="locations" class="responsive"></select>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 no-margin">
    <div id="schedule"></div>
  </div>
</div>

<script type="text/x-kendo-template" id="locationsTemplate">
  <div class="row locations-dropdown">
    <div class="col-xs-4"><h3>${ data.LocationNumber }</h3></div>
    <div class="col-xs-8">${ data.Address }</div>
  </div>
</script>

<% script('../js/mgmt-schedule-data.js') -%>
<% script('../js/mgmt-schedule.js') -%>


